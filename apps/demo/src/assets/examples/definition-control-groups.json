{
  "template": {
    "className": "grid"
  },
  "elements": [
    {
      "key": "id",
      "type": "control",
      "template": {
        "label": "Id",
        "input": {
          "type": "textbox",
          "placeholder": "Enter an id"
        }
      }
    },
    {
      "key": "key",
      "type": "control",
      "template": {
        "label": "Key",
        "input": {
          "type": "textbox",
          "placeholder": "Enter a key"
        }
      }
    },
    {
      "key": "type",
      "type": "control",
      "template": {
        "label": "Type",
        "input": {
          "type": "select",
          "defaultValue": "control",
          "options": [
            {
              "value": "control",
              "label": "Control"
            }
          ]  
        },
        "readonly": true
      }
    },
    {
      "key": "template",
      "type": "group",
      "elements": [
        {
          "key": "label",
          "type": "control",
          "template": {
            "label": "Label",
            "input": {
              "type": "textbox",
              "placeholder": "Enter a label"
            }
          }
        },
        {
          "key": "className",
          "type": "control",
          "template": {
            "label": "Class name",
            "input": {
              "type": "textbox",
              "placeholder": "Enter a class name"
            }
          }
        },
        {
          "type": "container",
          "template": {
            "orientation": "row"
          },
          "elements": [
            {
              "key": "hidden",
              "type": "control",
              "template": {
                "label": "Hidden",
                "className": "col",
                "input": {
                  "type": "checkbox"
                }
              }
            },
            {
              "key": "disabled",
              "type": "control",
              "template": {
                "label": "Disabled",
                "className": "col",
                "input": {
                  "type": "checkbox"
                }
              }
            },
            {
              "key": "readonly",
              "type": "control",
              "template": {
                "label": "Readonly",
                "className": "col",
                "input": {
                  "type": "checkbox"
                }
              }
            }
          ]
        },
        {
          "key": "input",
          "type": "group",
          "template": {
            "label": "Input"
          },
          "elements": [
            {
              "key": "type",
              "type": "control",
              "template": {
                "label": "Type",
                "input": {
                  "type": "select",
                  "options": [
                    {
                      "value": "checkbox",
                      "label": "Checkbox"
                    },
                    {
                      "value": "combobox",
                      "label": "Combobox"
                    },
                    {
                      "value": "datepicker",
                      "label": "Datepicker"
                    },
                    {
                      "value": "numberbox",
                      "label": "Numberbox"
                    },
                    {
                      "value": "radio",
                      "label": "Radio"
                    },
                    {
                      "value": "select",
                      "label": "Select"
                    },
                    {
                      "value": "switch",
                      "label": "Switch"
                    },
                    {
                      "value": "textarea",
                      "label": "Textarea"
                    },
                    {
                      "value": "textbox",
                      "label": "Textbox"
                    },
                    {
                      "value": "toggle",
                      "label": "Toggle"
                    }
                  ]  
                }
              },
              "readonly": true
            },
            {
              "key": "placeholder",
              "type": "control",
              "template": {
                "label": "Placeholder",
                "input": {
                  "type": "textbox",
                  "placeholder": "Enter a placeholder"
                }
              },
              "expressions": {
                "disabled": "(function(template) { return !template || !template.input || !template.input.type; })(data.root.model.template)"
              } 
            },
            {
              "key": "options",
              "type": "array",
              "template": {
                "label": "Options"
              },
              "actions": [
                {
                  "type": "button",
                  "template": {
                    "type": "button",
                    "label": "Clear options",
                    "action": "clearArrayElements"
                  }
                },
                {
                  "type": "button",
                  "template": {
                    "type": "button",
                    "label": "Pop option",
                    "action": "popArrayElement"
                  },
                  "expressions": {
                    "disabled": "!data.parent.length"
                  }
                },
                {
                  "type": "button",
                  "template": {
                    "type": "button",
                    "label": "Push option",
                    "action": "pushArrayElement"
                  }
                }
              ],
              "definitionTemplate": {
                "type": "group",
                "template": {
                  "className": "row"
                },
                "elements": [
                  {
                    "key": "isGroup",
                    "type": "control",
                    "template": {
                      "label": "Option Group",
                      "className": "col-12",
                      "input": {
                        "type": "switch",
                        "defaultValue": false
                      }
                    }
                  },
                  {
                    "key": "label",
                    "type": "control",
                    "template": {
                      "label": "Label",
                      "className": "col-6",
                      "input": {
                        "type": "textbox",
                        "placeholder": "Enter a label"
                      },
                      "validation": {
                        "required": true
                      }
                    },
                    "expressions": {
                      "className": "data.parent.model.isGroup ? 'col-11' : 'col-6'"
                    }
                  },
                  {
                    "key": "value",
                    "type": "control",
                    "template": {
                      "label": "Value",
                      "className": "col-5",
                      "input": {
                        "type": "textbox",
                        "placeholder": "Enter a value"
                      },
                      "validation": {
                        "required": true
                      }
                    },
                    "expressions": {
                      "hidden": "data.parent.model.isGroup",
                      "disabled": "data.parent.model.isGroup"
                    }
                  },
                  {
                    "type": "icon",
                    "template": {
                      "wrapperClassName": "col-1",
                      "label": "Remove option",
                      "icon": "remove",
                      "action": "removeArrayElement"
                    }
                  },
                  {
                    "key": "items",
                    "type": "array",
                    "template": {
                      "label": "Options of group",
                      "className": "col-12"
                    },
                    "actions": [
                      {
                        "type": "button",
                        "template": {
                          "type": "button",
                          "label": "Clear options",
                          "action": "clearArrayElements"
                        }
                      },
                      {
                        "type": "button",
                        "template": {
                          "type": "button",
                          "label": "Pop option",
                          "action": "popArrayElement"
                        },
                        "expressions": {
                          "disabled": "!data.parent.length"
                        }
                      },
                      {
                        "type": "button",
                        "template": {
                          "type": "button",
                          "label": "Push option",
                          "action": "pushArrayElement"
                        }
                      }
                    ],
                    "definitionTemplate": {
                      "type": "group",
                      "template": {
                        "className": "row"
                      },
                      "elements": [
                        {
                          "key": "label",
                          "type": "control",
                          "template": {
                            "label": "Label",
                            "className": "col-6",
                            "input": {
                              "type": "textbox",
                              "placeholder": "Enter a label"
                            },
                            "validation": {
                              "required": true
                            }
                          }
                        },
                        {
                          "key": "value",
                          "type": "control",
                          "template": {
                            "label": "Value",
                            "className": "col-5",
                            "input": {
                              "type": "textbox",
                              "placeholder": "Enter a value"
                            },
                            "validation": {
                              "required": true
                            }
                          }
                        },
                        {
                          "type": "icon",
                          "template": {
                            "wrapperClassName": "col-1",
                            "label": "Remove option",
                            "icon": "remove",
                            "action": "removeArrayElement"
                          }
                        }
                      ]
                    },
                    "expressions": {
                      "hidden": "!data.parent.model.isGroup",
                      "disabled": "!data.parent.model.isGroup"
                    }
                  }
                ]
              }
            },
            {
              "key": "defaultValue",
              "type": "control",
              "template": {
                "label": "Default value",
                "input": {
                  "type": "textbox",
                  "placeholder": "Enter a default value" 
                }
              }
            }
          ]
        }
      ]
    },
    {
      "key": "validation",
      "type": "group",
      "template": {
        "label": "Validation"
      },
      "elements": [
        {
          "key": "required",
          "type": "control",
          "template": {
            "label": "Required",
            "input": {
              "type": "checkbox"
            }  
          }    
        },
        {
          "key": "pattern",
          "type": "control",
          "template": {
            "label": "Pattern",
            "input": {
              "type": "checkbox"
            }  
          },
          "expressions": {
            "disabled": "(function(inputType) { return inputType !== 'combobox' && inputType !== 'textarea' && inputType !== 'textbox'; })(((data.root.model.template || {}).input || {}).type)"
          }    
        },
        {
          "key": "minLength",
          "type": "control",
          "template": {
            "label": "Min length",
            "input": {
              "type": "checkbox"
            }  
          },
          "expressions": {
            "disabled": "(function(inputType) { return inputType !== 'combobox' && inputType !== 'textarea' && inputType !== 'textbox'; })(((data.root.model.template || {}).input || {}).type)"
          }    
        },
        {
          "key": "maxLength",
          "type": "control",
          "template": {
            "label": "Max length",
            "input": {
              "type": "checkbox"
            }  
          },
          "expressions": {
            "disabled": "(function(inputType) { return inputType !== 'combobox' && inputType !== 'textarea' && inputType !== 'textbox'; })(((data.root.model.template || {}).input || {}).type)"
          }    
        },
        {
          "key": "min",
          "type": "control",
          "template": {
            "label": "Min",
            "input": {
              "type": "checkbox"
            }  
          },
          "expressions": {
            "disabled": "(function(inputType) { return inputType !== 'numberbox'; })(((data.root.model.template || {}).input || {}).type)"
          }    
        },
        {
          "key": "max",
          "type": "control",
          "template": {
            "label": "Max",
            "input": {
              "type": "checkbox"
            }  
          },
          "expressions": {
            "disabled": "(function(inputType) { return inputType !== 'numberbox'; })(((data.root.model.template || {}).input || {}).type)"
          }    
        }
      ]
    },
    {
      "key": "options",
      "type": "group",
      "template": {
        "label": "Options"
      },
      "elements": [
        {
          "key": "autoGeneratedId",
          "type": "control",
          "template": {
            "label": "Auto-generated id",
            "input": {
              "type": "checkbox"
            }  
          }    
        },
        {
          "key": "update",
          "type": "control",
          "template": {
            "label": "Update",
            "input": {
              "type": "select",
              "defaultValue": "change",
              "options": [
                {
                  "value": "change",
                  "label": "Change"
                },
                {
                  "value": "debounce",
                  "label": "Debounce"
                },
                {
                  "value": "submit",
                  "label": "Submit"
                }
              ]
            }  
          }    
        },
        {
          "key": "updateDebounce",
          "type": "control",
          "template": {
            "label": "Update debounce",
            "input": {
              "type": "numberbox",
              "defaultValue": 300,
              "min": 100,
              "max": 1000
            }  
          },
          "expressions": {
            "hidden": "data.parent.model.update !== 'debounce'",
            "disabled": "data.parent.model.update !== 'debounce'"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "action-submit",
      "type": "button",
      "template": {
        "type": "submit",
        "label": "Submit"
      },
      "expressions": {
        "disabled": "data.root.status !== 'VALID'"
      }
    }
  ]
}