{
  "template": {
    "className": "grid"
  },
  "children":[
    {
      "type": "modal",
      "template": {
        "title": "Modal",
        "classNameTitle": "modal-title-bg",
        "classNameChildren": "row",
        "width": "600px",
        "maxWidth": "calc(100% - 1rem)"
      },
      "trigger": {
        "type": "button",
        "template": {
          "type": "button",
          "label": "Open Modal",
          "action": "openModal"
        },
        "expressions": {
          "disabled": "data.parent.isOpen"
        }
      },
      "children":[
        {
          "type": "content",
          "template": {
            "className": "col",
            "content": "<h3>Heading 1</h3><p>Paragraph 1</p><p>Paragraph 2</p>"
          }
        },
        {
          "type": "content",
          "template": {
            "className": "col",
            "content": "<h3>Heading 2</h3><p>Paragraph 1</p><p>Paragraph 2</p>"
          }
        }
      ],
      "headerActions": [ 
        {
          "type": "icon",
          "template": {
            "type": "button",
            "label": "Close Modal",
            "icon": "clear",
            "action": "closeModal"
          }
        }
      ],
      "footerActions": [ 
        {
          "type": "button",
          "template": {
            "type": "button",
            "label": "Close Modal",
            "action": "closeModal"
          }
        }
      ]
    }
  ]
}